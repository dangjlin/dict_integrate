<%# if @word.errors.any? %>
<% if 0>5 do %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@word.errors.count, "error") %>.
    </div>
    <ul>
    <% @word.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>